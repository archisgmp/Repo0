name: Testing

on:
  # push:
  #   branches: [ "main" ]
  # pull_request:
  #   branches: [ "main" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4
      
      - name: Create directory for artifacts
        run: mkdir -p SampleArtifact

      - name: Install Node.js
        run: |
          curl -fsSL https://deb.nodesource.com/setup_20.x | sudo -E bash -
          sudo apt-get install -y nodejs
          
      - name: Install newman
        run: npm install -g newman

      - name: Run Postman collection 2 and generate JUnit XML reports
        run: |
          newman run "Collection2.json" -r junit --reporter-junit-export "SampleArtifact/report2.xml" 
      
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
            python-version: '3.x'

      # - name: Install Python dependencies
      #   run: pip install tkinter

      - name: Run Python script
        run: |
          python compare_xml.py > SampleArtifact/comparison_output.txt
        env:
          XML_FILE1: SampleArtifact/report1.xml
          XML_FILE2: SampleArtifact/report2.xml

      - name: Publish JUnit XML Report 2
        uses: actions/upload-artifact@v4
        with:
          name: JUnit Report 2
          path: SampleArtifact/report2.xml

      - name: Publish Comparison Output
        uses: actions/upload-artifact@v4
        with:
          name: Comparison Output
          path: SampleArtifact/comparison_output.txt